    <h3>Raider Penalties</h3>
    <!-- raider penalties -->
    <div class="table table-padding-1">
        <div class="table-row">
            <div class="table-cell tc-6">
                <img src="~/lib/Images/SamuraiSpirit/penalty-fire.png" class="talenticon" />
                Destroy barricade or farm
            </div>
            <div class="table-cell tc-6">
                <img src="~/lib/Images/SamuraiSpirit/penalty-pass.png" class="talenticon" />
                Must choose Pass action
            </div>
        </div>

        <div class="table-row">
            <div class="table-cell tc-6">
                <img src="~/lib/Images/SamuraiSpirit/penalty-wound.png" class="talenticon" />
                Take a wound
            </div>
            <div class="table-cell tc-6">
                <img src="~/lib/Images/SamuraiSpirit/penalty-shuffle.png" class="talenticon" />
                Shuffle a random card from discards back into deck<sup><span class="asterisk"></span></sup>
            </div>
        </div>

        <div class="table-row">
            <div class="table-cell tc-6">
                <img src="~/lib/Images/SamuraiSpirit/penalty-ninja.png" class="talenticon" />
                Add a card to intruder stack
            </div>
            <div class="table-cell tc-6">
                <img src="~/lib/Images/SamuraiSpirit/penalty-talents.png" class="talenticon" />
                During turn, cannot use talent or support tokens
            </div>
        </div>

        <div class="table-row">
            <div class="table-cell tc-6">
                <img src="~/lib/Images/SamuraiSpirit/penalty-defense.png" class="talenticon" />
                During turn, cannot defend
            </div>
            <div class="table-cell tc-6">
                <img src="~/lib/Images/SamuraiSpirit/penalty-discard.png" class="talenticon" />
